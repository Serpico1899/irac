# Backend Environment Configuration - Example
# Copy this file to .env.backend and update the values

# ==============================================
# APPLICATION SETTINGS
# ==============================================
APP_PORT=1405
ENV=development
NODE_ENV=development

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# MongoDB Connection
MONGO_URI=mongodb://127.0.0.1:27017/irac_dev
# For Docker: mongodb://mongo:27017/irac_dev

# Redis Connection
REDIS_URI=127.0.0.1
# For Docker: redis

# ==============================================
# PAYMENT GATEWAY CONFIGURATION
# ==============================================
# ZarinPal Settings (Primary Payment Gateway)
ZARINPAL_MERCHANT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
ZARINPAL_SANDBOX=true
ZARINPAL_CALLBACK_URL=http://localhost:3000/payment/callback

# Payment Gateway Settings
PAYMENT_MIN_AMOUNT=1000
PAYMENT_MAX_AMOUNT=50000000
PAYMENT_CURRENCY=IRR

# Alternative Payment Gateways (future implementation)
# SAMAN_MERCHANT_ID=your-saman-merchant-id
# PARSIAN_PIN=your-parsian-pin
# MELLAT_TERMINAL_ID=your-mellat-terminal-id

# ==============================================
# FRONTEND INTEGRATION
# ==============================================
FRONTEND_URL=http://localhost:3000

# ==============================================
# SMS SERVICE CONFIGURATION
# ==============================================
# SMS Provider Configuration
SMS_PROVIDER=mock
# Options: kavenegar, sms_ir, mock

# Kaveh Negar SMS Service (Primary)
SMS_API_KEY=your-kaveh-negar-api-key-here
SMS_SENDER=10004346
SMS_BASE_URL=https://api.kavenegar.com/v1

# SMS.ir Service (Alternative)
SMS_IR_API_KEY=your-sms-ir-api-key
SMS_IR_SECRET_KEY=your-sms-ir-secret
SMS_IR_LINE_NUMBER=your-line-number

# SMS Settings
SMS_ENABLED=true
SMS_MOCK_MODE=true
SMS_VERIFY_MOBILE=true
SMS_MAX_RETRY=3

# ==============================================
# EMAIL SERVICE CONFIGURATION
# ==============================================
# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@irac.ir
SMTP_SECURE=false

# ==============================================
# SECURITY SETTINGS
# ==============================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000

# ==============================================
# FILE STORAGE CONFIGURATION
# ==============================================
# Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf
UPLOAD_PATH=./public/uploads

# CDN Settings (future implementation)
# CDN_URL=https://cdn.irac.ir
# AWS_BUCKET=irac-media
# AWS_REGION=eu-west-1

# ==============================================
# LOGGING & MONITORING
# ==============================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Analytics (future implementation)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# MIXPANEL_TOKEN=your-mixpanel-token

# ==============================================
# ADMIN SETTINGS
# ==============================================
# Default Admin User (created on first run)
ADMIN_EMAIL=admin@irac.ir
ADMIN_PASSWORD=change-this-password
ADMIN_MOBILE=09123456789

# ==============================================
# BUSINESS CONFIGURATION
# ==============================================
# Wallet Settings
WALLET_CURRENCY=IRR
WALLET_MIN_DEPOSIT=10000
WALLET_MAX_DEPOSIT=50000000
WALLET_AUTO_APPROVE_LIMIT=1000000

# Bank Transfer Settings
BANK_TRANSFER_MIN_AMOUNT=10000
BANK_TRANSFER_MAX_PROCESSING_DAYS=3
BANK_TRANSFER_AUTO_APPROVAL=false

# Commission Settings
REFERRAL_COMMISSION_RATE=0.05
GROUP_DISCOUNT_RATE=0.10
PAYMENT_GATEWAY_FEE_RATE=0.015

# Business Bank Accounts
BUSINESS_BANK_MELLI_ACCOUNT=1234567890
BUSINESS_BANK_MELLI_IBAN=IR123456789012345678901234
BUSINESS_BANK_SADERAT_ACCOUNT=0987654321
BUSINESS_BANK_SADERAT_IBAN=IR987654321098765432109876

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Debug Settings
DEBUG=true
LESAN_PLAYGROUND=true
LESAN_TYPE_GENERATION=true

# Test Settings
TEST_MODE=false
MOCK_PAYMENTS=false
MOCK_SMS=false

# ==============================================
# PRODUCTION OVERRIDES
# ==============================================
# Uncomment and set these for production deployment
# ENV=production
# DEBUG=false
# LESAN_PLAYGROUND=false
# ZARINPAL_SANDBOX=false
# SMS_PROVIDER=kavenegar
# SMS_MOCK_MODE=false
# MONGO_URI=mongodb://your-production-mongo-url
# REDIS_URI=your-production-redis-url
# FRONTEND_URL=https://irac.ir
# ZARINPAL_CALLBACK_URL=https://irac.ir/payment/callback
# ALLOWED_ORIGINS=https://irac.ir,https://www.irac.ir
# BANK_TRANSFER_AUTO_APPROVAL=false
# WALLET_AUTO_APPROVE_LIMIT=500000
