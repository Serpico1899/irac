# Next.js Configuration
NEXT_PUBLIC_APP_NAME=IRAC
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:1405
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_ENDPOINT=http://localhost:1405/lesan
NEXT_PUBLIC_PLAYGROUND_URL=http://localhost:1405/playground

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE=fa
NEXT_PUBLIC_LOCALES=fa,en
NEXT_PUBLIC_FALLBACK_LOCALE=fa

# Payment Gateway Configuration
