{
  "tasks": {
    "bc-dev": "ENV=development deno run -A --watch --watch-exclude=declarations --no-clear-screen ./mod.ts",
    "start": "deno run --allow-all --v8-flags=--max-old-space-size=2048 --v8-flags=--optimize-for-size ./mod.ts",
    "dev": "deno run --allow-all --watch ./mod.ts",
    "prod": "deno run --allow-all --v8-flags=--max-old-space-size=4096 --v8-flags=--optimize-for-size --v8-flags=--enable-fast-calls-from-js ./mod.ts",
    "test": "deno test --allow-all",
    "check": "deno check ./mod.ts",
    "seed": "deno run --allow-all ./seed.ts"
  },
  "fmt": {
    "files": {
      "exclude": ["declaration"]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "semiColons": true,
      "proseWrap": "preserve"
    }
  },
  "compilerOptions": {
    "strict": false,
    "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns", "ES2022"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": ["declarations/", "node_modules/"]
  },
  "imports": {
    "@deps": "./deps.ts",
    "@lib": "./utils/mod.ts",
    "@model": "./models/mod.ts",
    "@app": "./mod.ts",
    "mongodb": "npm:mongodb@^6.3.0"
  },
  "nodeModulesDir": "auto"
}
